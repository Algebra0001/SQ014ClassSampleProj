@model LoginViewModel

@{
    ViewData["Title"] = "Login page";
}


<div class="auth-box">
    <h3>Login Here!</h3><br />

    <div asp-validation-summary="All"></div>

    <form method="post" asp-action="Login" asp-controller="Account">
        <div>
            <div class="inputs">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="Email" />
            </div>
            <span class="validation-msg" asp-validation-for="Email"></span>
        </div>
        <div>
            <div class="inputs">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Password" />
            </div>
            <span class="validation-msg" asp-validation-for="Password"></span>
        </div>

        <p class="">
            <a asp-action="ForgotPassword" asp-controller="Account">Forgot Password?</a>
        </p>

        <button class="btn btn-primary">Login</button>

        <p class="">
            Don't have an account? <a asp-action="Register" asp-controller="Account">Register here!</a>
        </p>

    </form>
</div>
