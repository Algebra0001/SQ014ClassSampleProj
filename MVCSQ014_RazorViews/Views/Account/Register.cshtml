@model RegisterViewModel

@{
    ViewData["Title"] = "Register page";
}


<div class="auth-box">
<h3>Register Here!</h3><br/>

    <div asp-validation-summary="All"></div>

    <form method="post" asp-action="Register" asp-controller="Account">
        <div>
            <div class="inputs">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" placeholder="User name" />
            </div>
            <span class="validation-msg" asp-validation-for="UserName"></span>
        </div>
        <div>
            <div class="inputs">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="Email" />
            </div>
            <span class="validation-msg" asp-validation-for="Email"></span>
        </div>
        <div>
            <div class="inputs">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Password" />
            </div>
            <span class="validation-msg" asp-validation-for="Password"></span>
        </div>
        <div>
            <div class="inputs">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
            </div>
            <span class="validation-msg" asp-validation-for="ConfirmPassword"></span>
        </div>

        <button class="btn btn-primary">Register</button>

        <p>
            Already have an account? <a asp-action="Login" asp-controller="Account">Login here!</a>
        </p>

    </form>
</div>

